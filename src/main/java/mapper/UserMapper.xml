<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="indi.sendya.concise.dao.UserDao">
	<!-- 获取用户: 输出直接映射到对象 -->
	<select id="getUserByLoginNamePsd" parameterType="map" resultType="indi.sendya.concise.entity.User">
		SELECT `uid`, `name`, `password`, `mail`, `url`, `screenName`, `created`, `activated`, `logged`, `group`, `authCode` FROM `users` WHERE 
		`name`=#{userName} AND
		`password`=#{passWord}
	</select>
	
	<update id="updatePassword" parameterType="indi.sendya.concise.dao.UserDao">
		UPDATE `users` SET `user_password` = #{userPassWord} WHERE `user_id` = #{userId} ;
	</update>
	
	<select id="getUserByLoginName" parameterType="String" resultType="indi.sendya.concise.entity.User">
		SELECT `uid`, `name`, `password`, `mail`, `url`, `screenName`, `created`, `activated`, `logged`, `group`, `authCode` FROM `users` WHERE name=#{userName} 
	</select>
</mapper> 
